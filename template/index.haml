!!! 5
%html
  %head
  
  %meta{:charset => "utf-8"}
  %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=edge"}
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}

  %title Energotec Landing Page

  %script{:type => "text/javascript", :src  => "js/vendor/jquery-1.9.1.min.js"}
  %script{:type => "text/javascript", :src  => "js/vendor/jquery.easing.1.3.js"}
  %script{:type => "text/javascript", :src  => "js/vendor/jquery.hammer.min.js"}
  %script{:type => "text/javascript", :src  => "js/vendor/jquery.superslides.min.js"}
  %script{:type => "text/javascript", :src  => "js/main.js"}

  %link{:rel => "stylesheet", :href => "style.css"}
  %link{:rel => "stylesheet", :href => "http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic", :type => "text/css"}

  %body#page-top
    %header.navigation{:role => "banner"}
      .header-bg-left.js-bg-left
      .navigation-wrapper
        .wrapper-logo
          .content-logo
            %a.logo{:href => "javascript:void(0)"}
              %img{:src => "images/energotec-logo.png", :alt => "Logo Image"}
        %a#js-mobile-menu.navigation-menu-button{:href => "javascript:void(0)"} MENU
        %nav{:role => "navigation"}
          %ul#js-navigation-menu.navigation-menu.show
            %li.nav-link
              %a{:href => "javascript:void(0)"} La Empresa
            %li.nav-link.more
              %a{:href => "javascript:void(0)"} Productos
              %ul.submenu
                - (1..3).each do |i|
                  %li
                    %a{:href => "javascript:void(0)"} Submenu Item #{i}
            %li.nav-link.more
              %a{:href => "javascript:void(0)"} Servicios
              %ul.submenu
                - (1..5).each do |i|
                  %li.more
                    %a{:href => "javascript:void(0)"} Submenu Item #{i}
                    %ul.submenu
                      - (1..3).each do |i|
                        %li
                          %a{:href => "javascript:void(0)"} Sub Sub Item #{i}
            %li.nav-link
              %a{:href => "javascript:void(0)"} Marcas
            %li.nav-link
              %a{:href => "javascript:void(0)"} Clientes
            %li.nav-link
              %a{:href => "javascript:void(0)"} Contacto

    // Main section

    %section.intro
      .intro-body
        .loading-container
          .pulse
        #slides

          %ul.slides-container
            - (1..3).each do |i|
              %li
                %img{:src => "images/landing-#{i}.jpg"}
                .slide-container
                  %h2 Lorem ipsum ad his scripta blandit partiendo #{i}
                  %p Qui ut wisi vocibus suscipiantur, quo dicit ridens inciderint id #{i}

          %nav.slides-navigation
            %a.fa.fa-angle-left.prev{:href => "#"}
            %a.fa.fa-angle-right.next{:href => "#"}

        .intro-bottom
          .relative
            %a.btn{:href => "javascript:void(0)"}
              VER PRODUCTOS
              %i.fa.fa-angle-right

            %ul.footer-social
              %li
                %span SÍGUENOS
              %li
                %a{:href => "javascript:void(0)"}
                  %i.fa.fa-facebook
              %li
                %a{:href => "javascript:void(0)"}
                  %i.fa.fa-twitter

            .view-sect2
              .table
                %a.down-arrow{:href => "javascript:void(0)"}
                .down-text Click para deslizar hacia abajo

        .intro-right
          %a.button{:href => "javascript:void(0)"}
            %i.fa.fa-bus
          %a.button{:href => "javascript:void(0)"}
            %i.fa.fa-check
          %a.button{:href => "javascript:void(0)"}
            %i.fa.fa-gear
          %a.button{:href => "javascript:void(0)"}
            %i.fa.fa-child

    - (2...3).each do |i|
      %section.content-section
        contenido #{i}

    %footer.footer{:role => "contentinfo"}
      .container
        .footer-links
          %ul
            %li
              %h3 Content
            %li
              %a{:href => "#"} Herramientas
            %li
              %a{:href => "#"} Equipos para minería
            %li
              %a{:href => "#"} Equipos Industriales
            %li
              %a{:href => "#"} Instrumentanción Industrial

          %ul
            %li
              %h3 Servicios
            %li
              %a{:href => "#"} Servicio Técnico
            %li
              %a{:href => "#"} Reparación de aros
            %li
              %a{:href => "#"} Amplio Stock
          
          %ul
            %li
              %h3 Nuestras Sedes
            %li
              %a{:href => "#"}
                %i.fa.fa-facebook
                Facebook
            %li
              %a{:href => "#"}
                %i.fa.fa-twitter
                Twitter
